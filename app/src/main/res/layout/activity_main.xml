<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grass_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:paddingHorizontal="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="FPT88.com"
            android:textColor="#000"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Nhà cái uy tín số 1 VN"
            android:textColor="#666666"
            android:textSize="20sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/shape1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số dư của bạn: $"
            android:textColor="@color/black"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="36dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/rank_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>

            <SeekBar
                android:id="@+id/hitokageSeekBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:thumbOffset="18dp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/hitokageGif"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:src="@drawable/chariz2" />

            <EditText
                android:id="@+id/hitokageAmountBet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:autofillHints=""
                android:backgroundTint="#f0f0f0"
                android:hint="@string/amount_of_money"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="#f0f0f0"
                android:maxLength="12"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/rank_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <SeekBar
                android:id="@+id/zenigameSeekBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:thumbOffset="18dp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/zenigameGif"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:src="@drawable/squirtle" />

            <EditText
                android:id="@+id/zenigameAmountBet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:autofillHints=""
                android:backgroundTint="#f0f0f0"
                android:hint="@string/amount_of_money"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="#f0f0f0"
                android:maxLength="12"
                android:textSize="20sp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/rank_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"/>

            <SeekBar
                android:id="@+id/fushigidaneSeekBar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:thumbOffset="18dp" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/fushigidaneGif"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:src="@drawable/bulb" />

            <EditText
                android:id="@+id/fushigidaneAmountBet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:autofillHints=""
                android:backgroundTint="#f0f0f0"
                android:hint="@string/amount_of_money"
                android:inputType="numberDecimal"
                android:textColor="@color/white"
                android:textColorHint="#f0f0f0"
                android:maxLength="12"
                android:textSize="20sp" />

        </RelativeLayout>


    </LinearLayout>

    <Button
        android:id="@+id/startRaceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellow_1"
        android:text="Bắt đầu"
        android:textColor="@color/black"
        android:textSize="15sp" />
</LinearLayout>